						<div class="row">
							<% for (const product of data.products) { %>
								<div class="col-md-4 d-flex">
									<div class="product ftco-animate add-to">
										<div class="img d-flex align-items-center justify-content-center" style="background-image: url('<%= product.image %>');">
											<div class="desc">
												<p class="meta-prod d-flex">
													<a class="d-flex align-items-center justify-content-center add-to-cart-btn"><span class="flaticon-shopping-bag"></span></a>
													<a class="d-flex align-items-center justify-content-center"><span class="flaticon-heart"></span></a>
													<a href="product-single?product=<%= product._id %>" class="d-flex align-items-center justify-content-center"><span class="flaticon-visibility"></span></a>
												</p>
											</div>
										</div>
										<div class="text text-center">
											<span class="<% if(product.tag==="Sale"){ %><%= "sale" %><% }else if(product.tag==="New-Arrival"){ %><%= "new" %><% }else{ %><%= "seller" %><% } %>"><%= product.tag %></span>
											<span class="category"><%= product.type %></span>
											<h2><%= product.name %></h2>
											<small class="d-none product-id"><%= product._id %></small>
											<p class="mb-0"><span class="price price-sale">$69.00</span> <span class="price">$<%= product.price %>.00</span></p>
										</div>
									</div>
								</div>
							<% } %> 
						</div>
						<div class="row mt-5">
		          <div class="col text-center">
		            <div class="block-27">
		              <ul>
						  <% if(data.currentPage > 1){ %> 
							<li><a href="/products?page=<%=data.currentPage-1%>">&lt;</a></li>
						  <% } %> 
						<% for(var i=0; i<data.pages; i++){ %>
							<% if(data.currentPage==i+1){ %> 
								<li class="active"><span><%= i+1 %></span></li>
							<% }else{ %> 
								<li><a href="/products?page=<%= i+1 %>"><%= i+1 %></a></li>
							<% } %> 
						<% } %> 
						<% if(data.currentPage < data.pages){ %>
							<li><a href="/products?page=<%=Number(data.currentPage+1)%>">&gt;</a></li>
						<% } %> 
		              </ul>
		            </div>
		          </div>
		        </div>
