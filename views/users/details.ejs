	<main style="background-color: #f5f5f5;" class="main-acct w-100 h-100 d-flex no-dark-body">
		<%- include("./../partials/account-sidebar.ejs") %> 
    <section class="second-sect">
      <div class="acc-header acc-border-bottom d-flex align-items-center h-58 px-3">
        <h3>Edit Address</h3>
      </div>
      <div class="acc-bottom w-100 p-4">
        <form action="/update-details" method="POST">
          <div class="d-flex sm-dflex-col">
            <div style="margin-right: 0.75rem;" class="form-group sm-input-p w-50 sm-w100 sm-nomargin">
              <label for="">Firstname</label>
            <input name="firstname" value="<% if(data.userInfo.firstname!=undefined){ %><%=data.userInfo.firstname %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control">
            </div>
            <div style="margin-left: 0.75rem;" class="form-group sm-input-p w-50 sm-w100 sm-nomargin">
              <label for="">Lastname</label>
              <input name="lastname" value="<% if(data.userInfo.lastname!=undefined){ %><%=data.userInfo.lastname %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control">
            </div>
          </div>

          <div class="d-flex sm-dflex-col">
            <div style="margin-right: 0.75rem;" class="form-group sm-input-p w-50 sm-w100 sm-nomargin">
              <label for="">Postcode</label>
              <input name="postcode" value="<% if(data.userInfo.postcode!=undefined){ %><%=data.userInfo.postcode %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control">
            </div>
            <div style="margin-left: 0.75rem;" class="form-group sm-input-p w-50 sm-w100 sm-nomargin">
              <label for="" class="mb-3">Phone</label>
              <div class="d-flex">
                <span class="mt-n1">+234</span><input name="" value="<% if(data.userInfo.phone!=undefined){ %><%=data.userInfo.phone %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control mt-n3">
              </div>
            </div>
          </div>

          <div class="form-group sm-input-p">
            <label for="">Address</label>
            <input name="address" value="<% if(data.userInfo.address!=undefined){ %><%=data.userInfo.address %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control">
          </div>

          <div class="d-flex sm-dflex-col">
            <div style="margin-right: 0.75rem;" class="form-group sm-input-p w-50 sm-w100 sm-nomargin">
              <label for="">Country</label>
              <input name="country" value="<% if(data.userInfo.country!=undefined){ %><%=data.userInfo.country %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control">
            </div>
            <div style="margin-left: 0.75rem;" class="form-group sm-input-p w-50 sm-w100 sm-nomargin">
              <label for="">City</label>
              <input name="city" value="<% if(data.userInfo.city!=undefined){ %><%=data.userInfo.city %><%}else{%><%=""%><%}%>" type="text" class="acc-input form-control">
            </div>
          </div>

          <button style="background-color: #b6472a; font-weight: bold;" class="btn no-rad w-100 text-light py-3 mt-3">SAVE</button>
        </form>
      </div>
    </section>
		<div class="show-first-sect ml-n2">
			<img src="./images/right-arrow.svg" width="50px" alt="">
		</div>		
